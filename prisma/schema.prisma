// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  role          Role     @default(OPERATOR) //Administrator / Operator
  password_hash String
  created_at    DateTime @default(now())

  Store Store[]

  @@map("users")
}

model Store {
  id              String   @id @default(uuid())
  store_custom_id String   @unique
  name            String
  description     String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())

  user       User   @relation(fields: [manager_id], references: [id])
  manager_id String

  Product Product[]

  @@map("stores")
}

model Product {
  id                String @id @default(uuid())
  product_custom_id String @unique
  bar_code          String

  name        String
  description String

  quantity   Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  @@map("products")
}
